<div class= "col-md-offset-1 col-md-10">
<h1>Edit Articles</h1>
<%= form_for @article do |f| %>
  <div class= "well">
 <div class= "form-group">
  <%= f.label :title %>:
  <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class= "form-group">
  <%= f.label :body %>:
  <%= f.text_area :body, class: "form-control" %>
  </div>

  <div class= "form-group">
  <%= f.label :catergory %>:
  <%= f.select :category_id, Category.all.collect {|x| [x.name, x.id]}, {:inclued_blank => "Select One"}, class: "form-control"  %>
  </div>

  <%= f.submit "Update Article", class: "btn btn-success ntn-lg"%>
    <%= link_to "Go Back", article_path %>
<% end %>
  </div>
</div>
